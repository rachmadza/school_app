<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>All Teachers Data</title>
  </head>
  <body>
    <h1>All Teachers Data</h1>
    <a href="teachers/add">Add Teachers Data</a>
    <ul>
      <%data.forEach(function(teacher){%>
      <li>
        Id : <%=teacher.id %>
        <br>
        Nama : <%=teacher.first_name %> <%=teacher.last_name %>
        <br>
        Email : <%=teacher.email %>
        <br>
        Subject : <% if(teacher.Subject == null) { %>
          <%='unassigned' %>
       <% } else { %>
          <%= teacher.Subject.subject_name %>
       <% } %>
        <br>
        <a href="teachers/edit/<%=teacher.id%>">Edit</a>
        <a href="teachers/delete/<%=teacher.id%>" onclick="return confirm('Anda yakin ingin menghapus data ini?')">Delete</a>
      </li>
      <br>
      <%})%>
      <br>
    </ul>
  </body>
</html>